{% extends 'back/baseBack.html.twig' %}


{% block body %}


    <div class="container-fluid">
        <div class="row flex-nowrap">
            {% include "back/includes/sidebar.html.twig" only %}

            <div class="col py-3">
                <div class="container">
                    <div class="col-12 m-auto">

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fase show" role="alert">
                                <strong>{{ message }}</strong>
                            </div>
                        {% endfor %}

                        <h1>Liste des utilisateurs</h1>
                        <hr>


                            <table class="table table-hover" style="margin-top: 10%">
                                <thead>
                                <tr class="active text-center">
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                    <th>Téléphone</th>
                                    <th></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% set nbr = 0 %}
                                {% for user in users %}
                                    <tr style="text-align:center;">
                                        <td>{% set nbr = nbr + 1 %}{{ nbr }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.phone }}</td>
                                        <td>
                                            <a href="{{ path('admin_delete_user', {'id': user.id}) }}" class="btn btn-danger"  onclick="return confirm('Souhaitez-vous supprimer cet utilisateurs ?');"><i class="fa-solid fa-trash"></i> supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        {{ knp_pagination_render(users) }}

                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}