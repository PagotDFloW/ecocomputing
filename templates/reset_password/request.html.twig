{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{ flashError }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                {{ form_start(requestForm) }}
                <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                    <div class="card-img-left d-none d-md-flex">
                        <!-- Background image for card set in CSS! -->
                    </div>

                    <div class="card-body p-4 p-sm-5">
                        <h5 class="card-title text-center mb-5 fw-bold fs-2">Rénitialiser mon passe <br> <em class="fs-6">Entrez votre adresse email afin de rénitialiser votre mot de passe</em></h5>
                        <div class="form-floating mb-3">
                            {{ form_widget(requestForm.email, {attr: {class: "form-control", placeholder: "nom@exemple.com"}})}}
                            <label for="floatingInputEmail">Adresse email</label>
                        </div>
                        <hr>
                        <div class="d-grid mb-2">
                            <button class="btn btn-lg btn-success btn-login fw-bold text-uppercase" type="submit">Rénitialiser mon mot de passe</button>
                        </div>

                    </div>
                </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
