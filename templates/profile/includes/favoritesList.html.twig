{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('styles/productList.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
 <div class="shop-list">
     <div class="d-flex justify-content-between">
         <!-- Content -->
         {% include "profile/includes/profileSidebar.html.twig" with {'user': app.user} %}

         <div class="col-md-9 m-auto order-md-2">
             <div class="g-pl-15--lg">

                 <!-- Products -->
                 <div class="row g-pt-30 g-mb-50 product-list">
                    {% for favori in favoris %}
                        <div class="col-6 col-lg-4 g-mb-30">
                            <!-- Product -->
                            <figure class="g-pos-rel g-mb-20">
                                <a href="{{ path('show_produit', {'id': favori.product.id}) }}"><img class="img-fluid" src="{{ asset('uploads/produits/' ~ favori.product.image1) }}" alt="Image Description"></a>

                                <figcaption class="w-100 g-bg-primary g-bg-black--hover text-center g-pos-abs g-bottom-0 g-transition-0_2 g-py-5">
                                    <a class="g-color-white g-font-size-11 text-uppercase g-letter-spacing-1 g-text-underline--none--hover" href="">New Arrival</a>
                                </figcaption>
                            </figure>

                            <div class="media">
                                <!-- Product Info -->
                                <div class="d-flex flex-column">
                                    <h4 class="h6 g-color-black mb-1 d-inline">
                                        <a class="u-link-v5 g-color-black g-color-primary--hover" href="" style="float: left;">
                                            {{ favori.product.name }}
                                        </a>
                                        <span class="d-block g-color-black g-font-size-17 text-end" style="float: right">{{ favori.product.prix }} â‚¬</span>
                                    </h4>
                                    <a class="d-inline-block g-color-gray-dark-v5 g-font-size-13" href="#!">{{ favori.product.description }}</a>

                                </div>
                                <!-- End Product Info -->

                                <!-- Products Icons -->
                                <ul class="list-inline media-body text-end">
                                    <li class="list-inline-item align-middle mx-0">
                                        <a class="u-icon-v1 u-icon-size--sm g-color-gray-dark-v5 g-color-primary--hover g-font-size-15 rounded-circle" href="#!" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add to Cart" onclick=addToCart({{ favori.product.id }})>
                                            <i class="fa-solid fa-cart-shopping"></i>
                                        </a>
                                    </li>
                                    <li class="list-inline-item align-middle mx-0">
                                        <a class="u-icon-v1 u-icon-size--sm text-danger g-color-primary--hover g-font-size-15 rounded-circle" href="{{ path('remove_product_from_favorites', {'id': favori.id}) }}" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add to Wishlist">
                                            <i class="fa-solid fa-heart"></i>
                                        </a>
                                    </li>
                                </ul>
                                <!-- End Products Icons -->
                            </div>
                            <!-- End Product -->
                        </div>
                    {% endfor %}
                    <hr class="g-mb-60">
                 </div>
                 <!-- End Products -->


             </div>
         </div>
         <!-- End Content -->
     </div>
 </div>
    <!-- End Products -->
{% endblock %}

