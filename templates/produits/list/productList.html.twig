{% for produit in produits %}
    <div class="col-6 col-lg-4 g-mb-30">
        <!-- Product -->
        <figure class="g-pos-rel g-mb-20">
            <a href="{{ path('show_produit', {'id': produit.id}) }}">
                {% if 'http' in produit.image1 %}
                    <img src={{ produit.image1 }} class="card-img-top" alt="...">
                {% else %}
                    <img class="img-fluid" src="{{ asset('uploads/produits/' ~ produit.image1) }}" alt="Image Description"></a>
                {% endif %}
        </figure>

        <div class="media">
            <!-- Product Info -->
            <div class="d-flex flex-column">
                <h4 class="h6 g-color-black mb-1 d-inline">
                    <a class="u-link-v5 g-color-black g-color-primary--hover" href="{{ path('show_produit', {'id': produit.id}) }}" style="float: left;">
                        {{ produit.name }}
                    </a>
                    <span class="d-block g-color-black g-font-size-17 text-end" style="float: right">{{ produit.prix }} â‚¬</span>
                </h4>
                <a class="d-inline-block g-color-gray-dark-v5 g-font-size-13" href="{{ path('show_produit', {'id': produit.id}) }}">{{ produit.description }}</a>

            </div>
            <!-- End Product Info -->

            <!-- Products Icons -->
            <ul class="list-inline media-body text-end">
                <li class="list-inline-item align-middle mx-0">
                    <a class="u-icon-v1 u-icon-size--sm g-color-gray-dark-v5 g-color-primary--hover g-font-size-15 rounded-circle" href="#!" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add to Cart" onclick=addToCart({{ produit.id }})>
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>
                </li>
                <li class="list-inline-item align-middle mx-0">
                    <a class="u-icon-v1 u-icon-size--sm g-color-gray-dark-v5 g-color-primary--hover g-font-size-15 rounded-circle" href="#!" data-toggle="tooltip" data-placement="top" title="" data-original-title="Add to Wishlist" onclick=addToFavorites({{ produit.id }})>
                        <i class="fa-solid fa-heart"></i>
                    </a>
                </li>
            </ul>
            <!-- End Products Icons -->
        </div>
        <!-- End Product -->
    </div>

{% endfor %}
<hr class="g-mb-60">